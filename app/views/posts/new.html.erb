<h1>Create New Post</h1>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %>:<br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :content %>:<br>
        <%= f.text_area :content %>
    </p>

    <p>
        <%= f.label :category %>:<br>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </p>

    <p>
        <%= f.label 'And/Or add a new category:' %><br>
        <%= f.fields_for :categories, @post.categories.build do |category| %>
            <%= category.text_field :name %>
        <% end %>
    </p>
    
    <%= f.submit %>
<% end %>
